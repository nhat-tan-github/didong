<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivitySubmit">
    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/baseline_arrow_black_back_24"
 />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/text"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:text="Ngày đến hạn:"
        />
        <TextView
        android:id="@+id/dayEnd"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        />
    </LinearLayout>
   <TextView
       android:id="@+id/exName"
       android:paddingTop="15dp"
       android:paddingLeft="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="30sp"
       android:textStyle="bold"
       />
    <TextView
        android:id="@+id/excontext"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <TextView
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Tệp đính kèm"
        />
    <TextView
        android:id="@+id/exlinkdrive"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/inpLink"
        android:layout_width="330dp"
        android:layout_marginTop="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:drawableStart="@drawable/baseline_add_link_24"
        android:padding="10dp"
        android:textSize="20sp" />
    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_submit_bg_design"
        android:layout_gravity="center"
        android:text="Nộp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
 />
</LinearLayout>